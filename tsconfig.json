{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "lib": ["ESNext", "DOM", "ES5", "ES6"],
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "jsx": "react"
  },
  "exclude": ["**/__tests__/*.test.ts?x", "dist", "node_modules"]
}
